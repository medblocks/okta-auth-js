{
  "compilerOptions": {
    "composite": false,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true,
    "rootDir": "./",
    "baseUrl": "./"
  },
  "files": [
    "package.json"
  ],
  "include": [
    "types/**/*.ts",
    "lib/**/*.js",
    "lib/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "build2"
  ]
}